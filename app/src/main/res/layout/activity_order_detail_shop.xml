<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.Order_Detail_Shop">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_rectangle"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_height="30dp">
        </ImageButton>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Order Detail">
        </TextView>
        <ImageButton
            android:id="@+id/EditOrder"
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_height="30dp">
        </ImageButton>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/orderid"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Id">
    </TextView>
    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date">
    </TextView>

    <TextView
        android:id="@+id/Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Status">
    </TextView>
    <TextView
        android:id="@+id/BuyerEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buyer Email">
    </TextView>
    <TextView
        android:id="@+id/BuyerPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buyer Phone">
    </TextView>
    <TextView
        android:id="@+id/Amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount">
    </TextView>
    <TextView
        android:id="@+id/Delivery_Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delivery Address">
    </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="center"
            android:background="@drawable/shape_rectangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buyer's Orders">
        </TextView>
    </LinearLayout>
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyceroforder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
