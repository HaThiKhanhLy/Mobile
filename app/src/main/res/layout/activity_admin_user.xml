<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.AdminUser">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/shape_rectangle">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_height="wrap_content">
        </ImageButton>


    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        app:cardElevation="20dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shap_retc"
            android:text="User"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>
    </androidx.cardview.widget.CardView>
<RelativeLayout
android:layout_below="@id/control"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/usertui">
<LinearLayout
    android:orientation="horizontal"
    android:id="@+id/searchlay1"
    android:gravity="center"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/searchtextuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:drawableLeft="@drawable/ic_baseline_search_24">

    </EditText>
    <ImageButton
        android:id="@+id/catogeryuser"
        android:layout_weight="0.9"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_category_24">

    </ImageButton>


</LinearLayout>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:id="@+id/recyclerofuser"
    android:orientation="vertical"
    tools:listitem="@layout/user_row"
    android:layout_below="@id/searchlay1"
    android:layout_height="wrap_content">

</androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>


    </LinearLayout>